{% include '/var/www/html/Symfony/first_symfony/app/Resources/views/core/bootstrap.html' %}
<link rel="stylesheet" href="{{ asset('bundles/framework/css/add_product.css') }}">

<div class="container">
    <br>
    <form method="post" action="/product/edit/{{ product.getId() }}">
        <input class="form-control add-product-input" type="text" name="name" placeholder="Name" value="{{ product.getName() }}">
        <input class="form-control add-product-input" type="number" name="price" placeholder="Price" value="{{ product.getPrice() }}">
        <input class="form-control add-product-input" type="text" name="description" placeholder="Description" value="{{ product.getDescription() }}">
        <select class="form-control add-product-input" name="categoryId">
            {% for category in categories %}
                {% if category.getId() == product.getCategoryId() %}
                    <option selected="selected" value="{{ category.getId() }}">{{ category.getTitle() }}</option>
                {% else %}
                    <option value="{{ category.getId() }}">{{ category.getTitle() }}</option>
                {% endif %}
            {% endfor %}
        </select>
        <input class="btn btn-info add-product-submit" type="submit" value="OK">
    </form>
    <a href="/product/list" class="btn btn-success add-product-submit">List of Products</a>
</div>