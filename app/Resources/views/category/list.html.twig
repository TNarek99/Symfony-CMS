{% include '/var/www/html/Symfony/first_symfony/app/Resources/views/core/bootstrap.html' %}
<link rel="stylesheet" href="{{ asset('bundles/framework/css/add_product.css') }}">

<div class="container">
    <h2 class="page-header">
        Categories <button id="add-product-button" class="btn btn-success">
            Add Category <span class="glyphicon glyphicon-plus"></span>
        </button>
    </h2>
    <div class="row">
        <div class="col-md-3">
            {% include '/var/www/html/Symfony/first_symfony/app/Resources/views/core/navigation.html' %}
        </div>
        <div class="col-md-9">
            <table class="table table-striped">
                <thead>
                <th>ID</th>
                <th>Title</th>
                <th width="1">Actions</th>
                </thead>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.getId() }}</td>
                        <td>{{ category.getTitle() }}</td>
                        <td>
                            <a style="margin-bottom: 10px;" href="/category/edit/{{ category.getId() }}" class="btn btn-warning">
                                Edit <span class="glyphicon glyphicon-edit"></span>
                            </a>
                            <br>
                            <a href="/category/delete/{{ category.getId() }}" class="btn btn-danger">
                                Delete <span class="glyphicon glyphicon-trash"></span>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
</div>

<div id="add-product-modal" class="modal">
    <div class="modal-content">
        <span class="close close-add-product">x</span>
        <h3 class="page-header text-center">Add Category</h3>
        <form method="post" action="{{ addUrl }}">
            <input class="form-control add-product-input" type="text" name="title" placeholder="Title">
            <input class="btn btn-info add-product-submit" type="submit" value="Add">
        </form>
    </div>
</div>

<script src="{{ asset('bundles/framework/js/add_product.js') }}"></script>